{% extends 'base.html.twig' %}

{% block styles %}
  <link rel="stylesheet" href="/assets?css=login">
{% endblock %}

{% block main %}
  <div class="main-login">
    <section>
      <img class="image" src="/assets?img=platform-event.png" alt="animacao">
    </section>
  
    <section class="card-login">
      <h2>Login</h2>

      <form action="javascript:void(0)" name="form_login" onsubmit="OBJLogin.sendForm(this)">
        <div class="textfield">
          <label for="email"></label>
          <input placeholder="Email" type="email" id="email" name="email" required />
        </div>
        <div class="textfield">
          <label for="password"></label>
          <input placeholder="Password" type="password" id="password" name="password" required />
        </div>
        <br>
        <button class="btn-login" type="submit">Login</button>
      </form>
  
      <p>Don't have a account? <a href="/user/register">SignUp now</a></p>
    </section>
  </div>
{% endblock %}

{% block scripts %}
  <script src="/assets?js=login"></script>
{% endblock %}